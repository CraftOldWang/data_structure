{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:\\Softwares\\1Portable_softwares\\Scoop\\apps\\gcc\\current\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-Wall",
                "-Wextra",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        //报告看不懂，还是丢visual studio里吧。
        {
            "label": "Run with Dr. Memory",
            "type": "shell",
            "command": "D:\\Softwares\\1Portable_softwares\\DrMemory-Windows-2.6.20005\\bin\\drmemory.exe",
            "args": [
                "--",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        //我不太会用。。。命令行真的有点难。
        {
            "label": "Build and Run with Dr. Memory",
            "type": "shell",
            "dependsOn": [
                "C/C++: g++.exe build active file",
